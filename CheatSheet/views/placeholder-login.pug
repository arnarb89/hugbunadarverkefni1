extends placeholder-layout

block content
	div.fullWidth
		div.loginContainer.loginSignupWidth
			div.breadcrumbsContainer.mainHeader.verticalMiddleContent
				span.breadcrumbsText
					a(href='/').loginLinks CheatSheet
						b=" > "
					a(href='/login').loginLinks Login
			div.coolBorder
				h2(style="margin:0px;padding-bottom:0.7em;").fullWidth.centerContent Login
				form(method="post" action='/login')
					fieldset.form-group  
						label(for="username") Username:
						input(id="username" type="text" placeholder="Username" name="username" autofocus required).form-control
					fieldset.form-group
						label(for="password") Password:
						input(id="password" type="password" name="password" placeholder="Password" required).form-control
					div
						input(type="submit").form-control.btn-success.active.transition
				if (message != "")
					div
						span= message
		